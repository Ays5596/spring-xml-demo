<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id = "hr" class = "com.stackroute.domain.Actor">
    <constructor-arg name = "name" value="Hrithik" />
    <constructor-arg name="gender" value="Male" />
    <constructor-arg name="age" value="47" />
    </bean>
    <bean id = "dp" class = "com.stackroute.domain.Actor">
        <constructor-arg name = "name" value="Deepika" />
        <constructor-arg name="gender" value="Female" />
        <constructor-arg name="age" value="38" />
    </bean>
    <bean id = "rk" class = "com.stackroute.domain.Actor">
        <constructor-arg name = "name" value="Ranbir" />
        <constructor-arg name="gender" value="Male" />
        <constructor-arg name="age" value="37" />
    </bean>

    <bean name = "movieA, movieB" class = "com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="HR" ref="hr" />
        <constructor-arg name="DP" ref="dp" />
        <constructor-arg name="RK" ref="rk" />
    </bean>

</beans>